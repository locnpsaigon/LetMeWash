<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vn.letmewash.android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:name=".controllers.LMWApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ServiceActivity" />
        <activity android:name=".MessageActivity" />
        <activity android:name=".ServiceDetailsActivity" />
        <activity android:name=".ServiceDescriptionActivity" />
        <activity android:name=".CartActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".CheckoutTaskActivity" />
        <activity android:name=".OrderActivity" />
        <activity android:name=".OrderDetailsActivity" />
        <activity android:name=".MessageDetailsActivity" />
        <activity android:name=".SupportActivity" />
        <activity android:name=".ChangePasswordActivity" />
        <activity android:name=".RecoveryPasswordActivity"></activity>
    </application>

</manifest>